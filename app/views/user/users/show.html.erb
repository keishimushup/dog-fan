<h1>User::Users#show</h1>
<div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <h3><%= @user.name %></h3>
  <% if @user == current_user %>
   <div><%= link_to "プロフィール編集", edit_user_path(@user.id) %></div>
  <% end %>
  <div>フォロー一覧</div>
  <div>フォロワー一覧</div>
  <div><%= @user.introduction %></div>
</div>

<% @posts.each do |posts| %>
<div>
  <%= link_to post_path(posts.id) do %>
   <%= image_tag posts.get_image %>
  <% end %>
  <p>タイトル:<%= posts.title %></p>
  <p>内容:<%= posts.explanation %></p>
  <p>いいね</p>
  <p>コメントカウント</p>
</div>
<% end %>
