<h1>ユーザー詳細</h1>
<div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <h3><%= @user.name %></h3>
  <% if @user == current_user %>
   <div><%= link_to "プロフィール編集", edit_user_path(@user.id) %></div>
  <% elsif current_user.following?(@user) %>
   <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete %>
  <% else %>
   <%= link_to "フォローする", user_relationships_path(@user.id), method: :post %>
  <% end %>
  <%= link_to "フォロー一覧", user_followings_path(@user.id) %>
  <%= link_to "フォロワー一覧",user_followers_path(@user.id) %>
  <div><%= @user.introduction %></div>
</div>

<% @posts.each do |posts| %>
<div>
  <%= link_to post_path(posts.id) do %>
   <%= image_tag posts.get_image %>
  <% end %>
  <p>タイトル:<%= posts.title %></p>
  <p>内容:<%= posts.explanation %></p>
  <p class="favorite-btn_<%= posts.id %>">
    <%= render 'user/favorites/favorite', post: posts %>
  </p>
  <p>コメント数:<%= posts.post_comments.count %></p>
</div>
<% end %>
