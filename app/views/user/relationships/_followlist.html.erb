<% if users.exists? %>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>ユーザー画像</th>
        <th>名前</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image(50,50) %></td>
        <td><%= user.name %></td>
        <td>フォロー数: <%= user.followings.count %></td>
        <td>フォロワー数: <%= user.followers.count %></td>
        <td><%= link_to "ユーザー詳細", user_path(user.id) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  <p>ユーザーはいません</p>
<% end %>