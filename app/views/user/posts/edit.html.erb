<div class="row">
  <div class="mt-2">
    <h1>投稿編集</h1>
    <%= form_with model: @post do |f| %>
     <div class="form-group mt-4">
       <%= f.label :image, "画像" %>
       <%= f.file_field :image, accept: "image/*" %>
     </div>
     <div class="form-group">
       <%= f.label :title, "タイトル" %>
       <%= f.text_field :title, autofocus: true %>
     </div>
     <div class="form-group">
       <%= f.label :explanation, "内容" %>
       <%= f.text_area :explanation, autofocus: true %>
     </div>
     <div class="form-group">
      <h4>タグ(タグを選ぶと検索されやすくなります)</h4>
          <%= f.radio_button :genre_id, "1" %>
          <%= f.label :genre_id, "小型犬" %>
          <%= f.radio_button :genre_id, "2" %>
          <%= f.label :genre_id, "中型犬" %>
          <%= f.radio_button :genre_id, "3" %>
          <%= f.label :genre_id, "大型犬" %>
     </div>
     <div class="form-group">
       <%= f.submit "変更する" %>
     </div>
    <% end %>
  </div>
</div>