<div class="row">
  <div class="col-md-6">
    <h4 class="mt-3">キーワード</h4>
    <%= render 'user/homes/search' %>
  </div>
  <div class="col-md-6">
    <h4 class="mt-3">ジャンル検索</h4>
    <%= form_tag posts_path, method: :get do %>
      <% @genres.each do |genre| %>
        <div class="tag-box">
          <%= link_to genre.name, posts_path(name: genre.id) %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
<div class="card-list-container py-5">
  <%= render 'user/users/posts', posts: @posts %>
</div>