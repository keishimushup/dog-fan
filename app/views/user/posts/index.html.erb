<h1>User::Posts#index</h1>
<% @posts.each do |post| %>
<div>
  <p>ユーザー画像：<%= image_tag 'sample-author1.jpg' %></p>
  <p><%= post.user.name %></p>
  <%= link_to post_path(post.id) do %>
    <%= image_tag post.get_image %>
  <% end %>
  <p>title：<%= post.title %></p>
  <p>説明：<%= post.explanation %></p>
</div>
<% end %>
