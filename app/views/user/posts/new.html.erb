<div class="row">
  <div class="col-md-7 mt-2">
    <h2>投稿フォーム</h2>
      <%= form_with model: @post do |f| %>
        <h4 class="mt-3">画像</h4>
          <%= f.file_field :image, accept: "image/*" %>
        <h4 class="mt-2">タイトル</h4>
          <%= f.text_field :title %>
        <h4 class="mt-2">内容</h4>
          <%= f.text_area :explanation %>
        <h4 class="mt-2">タグ(タグを選ぶと検索されやすくなります)</h4>
          <%= f.radio_button :genre_id, "1" %>
          <%= f.label :genre_id, "小型犬" %>
          <%= f.radio_button :genre_id, "2" %>
          <%= f.label :genre_id, "中型犬" %>
          <%= f.radio_button :genre_id, "3" %>
          <%= f.label :genre_id, "大型犬" %>
        <div class="mt-2">
          <%= f.submit '投稿' %>
        </div>
      <% end %>
  </div>
</div>