<h2>ユーザー詳細</h2>
<div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <h3><%= @user.name %></h3>
  <div><%= @user.introduction %></div>
</div>

<% @posts.each do |posts| %>
<div>
  <%= image_tag posts.get_image %>
  <p>タイトル:<%= posts.title %></p>
  <p>内容:<%= posts.explanation %></p>
  <p>♡<%= posts.favorites.count %> いいね</p>
  <p>コメント数:<%= posts.post_comments.count %></p>
</div>
<% end %>
